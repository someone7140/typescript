{
  "name": "jleague-analysis-api",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:debug": "node --inspect-brk=9229 ./node_modules/.bin/vite",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -e .dev.vars -- tsx ./src/db/migration.tsx"
  },
  "dependencies": {
    "@hono/graphql-server": "^0.7.0",
    "@neondatabase/serverless": "^1.0.2",
    "@pothos/core": "^4.12.0",
    "dotenv-cli": "^11.0.0",
    "drizzle-orm": "^0.45.1",
    "graphql": "^16.12.0",
    "hono": "^4.11.7",
    "node-html-parser": "^7.0.2"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@cloudflare/workers-types": "^4.20260131.0",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.21.0",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.5.2",
    "wrangler": "^4.17.0"
  }
}
